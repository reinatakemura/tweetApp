<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <%= image_tag post.user.image_name.to_s %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to post.user.name, user_path(post.user.id) %>
          </div>
          <%= link_to post.content, post_path(post.id) %>
          <br>
          <span class="fa fa-heart like-btn-unlike "> <%= post.liked_users.count %> </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
