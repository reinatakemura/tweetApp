<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag @user.image_name.to_s %>
      <h2> <%= @user.name %> </h2>
      <p> <%= @user.email %> </p>
      <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(current_user) %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li class="active"> <%= link_to "投稿", user_path(@user) %> </li>
      <li> <%= link_to "いいね！", user_likes_path(@user) %> </li>
    </ul>
    
    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <%= image_tag post.user.image_name.to_s %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to post.user.name, user_path(post.user.id) %>
          </div>
            <%= link_to post.content, post_path(post.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
