<div class="main signup-new">
  <div class="container">
    <h1 class="form-heading">新規ユーザー登録</h1>
    <%# <%= render "devise/shared/links" %>
    <%# <%= link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post %>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form users-form">
        <div class="form-body">
          <%= f.label "ユーザー名" %>
          <%= f.text_field :name, placeholder: "名前を入力してください" %>

          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, placeholder: "emailを入力してください" %>
          
          <%= f.label "アイコン", class: 'image_label' %>
          <%= image_tag @user.image_name.to_s, alt: "preview", class: "prev-image" %>
          <%= f.file_field :image_name, class: "image_form" %>

          <% if @sns_id.present? %>
            <%= hidden_field_tag :sns_auth, true %>
          <% else %>
            <%= f.label "パスワード" %>
            <!--
            -->
            <% if @minimum_password_length %>
              <em>
                <%# (#{@minimum_password_length} characters minimum) %>
              </em>
            <% end %>
            <br />
            <%= f.password_field :password, placeholder: "passwordを入力してください" %>
          <% end %>

  
          <%= f.submit "新規登録"%>

        </div>
      </div>
    <% end %>

    <h1 class="form-heading">テストユーザー</h1>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="form users-form test-user">
        <div class="form-body">
          <p>テストユーザーとしてログインできます</p>
          <%# <%= f.hidden_field :name, value: 'test-user' %>
          <%= f.hidden_field :email, value: 'test@example.com' %>
          <%= f.hidden_field :password, value: '123456' %>
          <%= f.submit 'ログイン' %>
        </div>
      </div>
    <% end %>

  </div>
</div>

