<div class="main signin-new">
  <div class="container">
    <h1 class="form-heading">サインイン</h1>
    <%# <%= render "devise/shared/links" %>
    <%# <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post %>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <%# <%= devise_error_messages! %>
<!--
      <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "#{key}" %>
      <% end %>
-->
      <div class="form users-form">
        <div class="form-body">

          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, placeholder: "emailを入力してください" %>
          
          <%= f.label "パスワード" %>
          <%= f.password_field :password, placeholder: "passwordを入力してください" %>

          <%= f.submit "サインイン" %>
        </div>
      </div>
    <% end %>

    <h1 class="form-heading">テストユーザー</h1>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="form users-form test-user">
        <div class="form-body">
          <p>テストユーザーとしてログインできます</p>
          <%# <%= f.hidden_field :name, value: 'test-user' %>
          <%= f.hidden_field :email, value: 'test@example.com' %>
          <%= f.hidden_field :password, value: '123456' %>
          <%= f.submit 'ログイン' %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>

